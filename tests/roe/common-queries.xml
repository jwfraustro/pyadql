    <query uuid='16070256-2cb2-47a5-b24d-88856b0630ac'>
        <dataset>http://osa.roe.ac.uk/</dataset>
        <description>
            <![CDATA[
            A really simple example.
            ]]>
        </description>

        <adql version='adql-2.1' valid='true'>
            <![CDATA[
            SELECT
                TOP 10
                ra,
                dec
            FROM
                atlassource  
            ]]>
        </adql>
    </query>

    <query uuid='d6004ff9-06a3-483f-9720-f1afabfbbe58'>
		<dataset>http://osa.roe.ac.uk/</dataset>
		<description>
			<![CDATA["Simple example with aggregate function"]]>
		</description>
        <adql version='adql-2.1' valid='true'>
            <![CDATA[
            SELECT
                AVG(rAperMag3)
            FROM
                atlasSource
            WHERE
                rAperMag3 > 0.0  
            ]]>
        </adql>
    </query>

    <query uuid='84c860f0-1623-463b-ba4d-830185853e3f'>
        <dataset>http://osa.roe.ac.uk/</dataset>
		<description>
			<![CDATA["Simple example with aggregate function (JJC: it's the same as the previous one)"]]>
		</description>
        <adql version='adql-2.1' valid='true'>
            <![CDATA[
                SELECT
                    AVG(rAperMag3)
                FROM
                    atlasSource
                WHERE
                    rAperMag3 > 0.0  
            ]]>
        </adql>
    </query>
    <query uuid='7ad59553-3036-4916-b61f-bb3529a1a3ea'>
        <dataset>http://osa.roe.ac.uk/</dataset>
		<description>
			<![CDATA["Simple example"]]>
		</description>
        <adql version='adql-2.1' valid='true'>
            <![CDATA[
                SELECT
                    ra,
                    dec
                FROM
                    atlasMergeLog  
            ]]>
        </adql>
    </query>
    <query uuid='c3f1bc37-4659-4528-a444-e14aabad81bc'>
        <dataset>http://osa.roe.ac.uk/</dataset>
		<description>
			<![CDATA["Simple example with BETWEEN condition"]]>
		</description>
        <adql version='adql-2.1' valid='true'>
            <![CDATA[
            SELECT
                ra,
                dec
            FROM
                atlasMergeLog
            WHERE
                dec BETWEEN -22.5 AND 20.5  
            ]]>
        </adql>
    </query>
    <query uuid='77eb3ded-be2a-49a2-a551-364341778c65'>
        <dataset>http://osa.roe.ac.uk/</dataset>
		<description>
			<![CDATA["Example with multiple conditions"]]>
		</description>
        <adql version='adql-2.1' valid='true'>
            <![CDATA[
            SELECT
                mjdObs,
                ra,
                dec
            FROM
                atlasMergeLog,
                Multiframe
            WHERE
                (dec BETWEEN -22.5 AND -12.5)
            AND
                (gmfID = multiframeID)
            AND
                (gmfID > 0)  
            ]]>
        </adql>
    </query>
    <query uuid='96adf235-14b1-4f7e-a522-6bf687cec218'>
        <dataset>http://osa.roe.ac.uk/</dataset>
        <description>
            <![CDATA[
            A more realistic example.
            ]]>
        </description>
        <adql version='adql-2.1' valid='true'>
            <![CDATA[
            SELECT
                ATLASsource.*,
                2*DEGREES(ASIN(sqrt(power(-0.997825033922517-cx, 2) + power(-0.052293794140904105-cy, 2) + power(-0.040131792532559725-cz,2)) / 2)) * 60 as dist
            FROM
                ATLASsource
            WHERE
                dec > -2.3166666666666664
            AND
                dec < -2.283333333333333
            AND
                RA >= 182.98331970017435
            AND
                RA <= 183.01668029982565
            AND
                ((cx * -0.997825033922517 + cy * -0.052293794140904105 + cz * -0.040131792532559725 ) >= 0.9999999576920253)  
            ]]>
        </adql>
    </query>

</queries>



